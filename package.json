{
  "name": "slideshow",
  "author": "Akronat <akronat@does.not.exist.com>",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "preebuild": "npm run build",
    "ebuild": "electron-builder -wl -c.extraMetadata.main=build/electron.js -c.extraMetadata.homepage=./"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "myappidprobably",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "category": "somecategoryiguess",
      "target": [
        "deb"
      ],
      "icon": "public/logo512.png"
    },
    "win": {
      "target": "portable",
      "icon": "public/logo512.png"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "electron": "^10.1.4",
    "electron-builder": "^22.9.1",
    "react-scripts": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
